<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="contactInformationDc" class="com.company.timesheets.entity.ContactInformation"
                  provided="true"/>
    </data>
    <content>
        <vbox id="root">
            <formLayout id="contactInformationForm" dataContainer="contactInformationDc">
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="60em" columns="3"/>
                </responsiveSteps>
                <emailField id="emailField" property="email">
                    <prefix>
                        <icon icon="ENVELOPE"/>
                    </prefix>
                </emailField>
                <textField id="urlField" datatype="string" property="url">
                    <prefix>
                        <icon icon="LINK"/>
                    </prefix>
                </textField>
                <textField id="phoneField" datatype="string" property="phone">
                    <prefix>
                        <icon icon="PHONE_LANDLINE"/>
                    </prefix>
                </textField>
                <textArea id="addressField" colspan="3" property="address">
                    <prefix>
                        <icon icon="MAP_MARKER"/>
                    </prefix>
                </textArea>
            </formLayout>
        </vbox>
    </content>
</fragment>